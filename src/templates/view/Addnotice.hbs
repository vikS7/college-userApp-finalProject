        <div id="main" class="main">
            <div id="add-notices">
                <h1>Add Notices</h1>
                <form id="addNotice">
                    <div class="form-group row">
                        <label for="title" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input name = "title" type="text" class="form-control" id="title" maxlength="75" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="content" class="col-sm-2 col-form-label">Content</label>
                        <div class="col-sm-10">
                            <textarea name = "content" type="text" class="form-control" id="content" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="authority" class="col-sm-2 col-form-label">By</label>
                        <div class="col-sm-10">
                            <input name ="author" type="text" class="form-control" id="authority" maxlength="50" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="expire-date" class="col-sm-2 col-form-label">Valid till</label>
                        <div class="col-sm-10">
                            <input name = "date" type="date" id="expire-date" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark">ADD</button>
                </form>
            </div>
        </div>
    </div>
